{
  "name": "zojaji/laravel-workflow",
  "description": "General-purpose workflow engine for Laravel with Spatie integration.",
  "type": "library",
  "license": "MIT",
  "keywords": ["laravel", "workflow", "spatie", "permission"],
  "authors": [{"name": "Amir"}],
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0 || ^11.0 || ^12.0",
    "illuminate/database": "^10.0 || ^11.0 || ^12.0",
    "illuminate/routing": "^10.0 || ^11.0 || ^12.0",
    "illuminate/http": "^10.0 || ^11.0 || ^12.0",
    "illuminate/view": "^10.0 || ^11.0 || ^12.0",
    "spatie/laravel-permission": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Amir\\Workflow\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Amir\\Workflow\\WorkflowServiceProvider"
      ],
      "aliases": {
        "Workflow": "Amir\\Workflow\\Facades\\Workflow"
      }
    }
  }
}
